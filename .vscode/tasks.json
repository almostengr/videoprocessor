{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/Almostengr.VideoProcessor.Api/Almostengr.VideoProcessor.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean Release Project",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "clean",
                "-c",
                "Release",
            ],
            "group": "none"
        },
        {
            "label": "Publish Release",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "-r",
                "linux-x64",
                "--self-contained",
                "-c",
                "Release",
                "*sln"
            ],
            "group": "none",
            "dependsOn": ["Clean Release Project"]
        },
        {
            "label": "Deploy Production",
            "command": "scp",
            "type": "shell",
            "args": [
                "-pr",
                "/home/almostengineer/Downloads/chromedriver",
                "${workspaceRoot}/systemd/videoProcessorWorker.service",
                "${workspaceRoot}/source/Almostengr.VideoProcessor.Worker/bin/Release/net6.0/linux-x64/publish/*",
                "iamadmin@192.168.1.119://home/iamadmin/videoprocessor/",
            ],
            "group": "none",
            "dependsOn": ["Tag Release"],
        },
        {
            "label": "Tag Release",
            "command" : "git",
            "type": "shell",
            "args": [
                "tag",
                "-a",
                "\"v6.$(date +%Y.%m.%d)\"",
                "-m",
                "\"version 6.$(date +%Y.%m.%d)\""
            ],
            "dependsOn": ["Publish Release"],
        }
    ]
}